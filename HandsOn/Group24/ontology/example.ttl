# coding: UTF-8
@prefix :       <http://group24.linkeddata.es/ontology/urban-env#> .
@prefix ex:     <http://group24.linkeddata.es/resource/> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms:<http://purl.org/dc/terms/> .

#################################################################
# DISTRITOS
#################################################################

ex:arbolado/district/01 a :District ;
    :districtCode 1 ;
    :districtName "Centro"@es ;
    rdfs:label "Distrito de Madrid: Centro"@es .

ex:arbolado/district/02 a :District ;
    :districtCode 2 ;
    :districtName "Arganzuela"@es ;
    rdfs:label "Distrito de Madrid: Arganzuela"@es .

#################################################################
# ESPECIES
#################################################################

ex:arbolado/species/Pinus_pinea a :TreeSpecies ;
    :speciesName "Pinus pinea" ;
    rdfs:label "Pino piñonero"@es .

ex:arbolado/species/Platanus_hispanica a :TreeSpecies ;
    :speciesName "Platanus × hispanica" ;
    rdfs:label "Plátano de sombra"@es .

#################################################################
# OBSERVACIONES DE ARBOLADO (una por distrito+especie+año)
#################################################################

ex:arbolado/observation/2024-01-Pinus_pinea a :TreeStockObservation ;
    :year "2024"^^xsd:gYear ;
    :treeCount "208"^^xsd:integer ;
    :inDistrict ex:arbolado/district/01 ;
    :aboutSpecies ex:arbolado/species/Pinus_pinea ;
    rdfs:label "Observación de arbolado — Centro — Pinus pinea (2024)"@es .

ex:arbolado/observation/2024-01-Platanus_hispanica a :TreeStockObservation ;
    :year "2024"^^xsd:gYear ;
    :treeCount "21077"^^xsd:integer ;
    :inDistrict ex:arbolado/district/01 ;
    :aboutSpecies ex:arbolado/species/Platanus_hispanica ;
    rdfs:label "Observación de arbolado — Centro — Plátano de sombra (2024)"@es .

#################################################################
# OBSERVACIONES DE NO₂ (una por año)
#################################################################

ex:pollution/observation/NO2-1990 a :PollutionObservation ;
    :year "1990"^^xsd:gYear ;
    :no2Value "90.0"^^xsd:float ;
    rdfs:label "Valor medio de NO₂ en España — 1990 (µg/m³)"@es .

ex:pollution/observation/NO2-2024 a :PollutionObservation ;
    :year "2024"^^xsd:gYear ;
    :no2Value "27.3"^^xsd:float ;
    rdfs:label "Valor medio de NO₂ en España — 2024 (µg/m³)"@es .

#################################################################
# OBSERVACIONES DE GASTO AMBIENTAL (una por año)
#################################################################

ex:expenditure/observation/2008 a :ExpenditureObservation ;
    :year "2008"^^xsd:gYear ;
    :expenditureAmount "12485071.00"^^xsd:decimal ;
    rdfs:label "Gasto en protección ambiental — Industria total (España) — 2008"@es .

ex:expenditure/observation/2023 a :ExpenditureObservation ;
    :year "2023"^^xsd:gYear ;
    :expenditureAmount "166797613.00"^^xsd:decimal ;
    rdfs:label "Gasto en protección ambiental — Industria total (España) — 2023"@es .

#################################################################
# METADATOS PROVENIENCIA (opcional pero recomendable)
#################################################################

ex:dataset/arbolado a rdf:Bag ;
    dcterms:title "Arbolado en zonas verdes — Distritos de Madrid (2024)"@es ;
    dcterms:license <https://creativecommons.org/licenses/by/4.0/> ;
    rdfs:label "Dataset: Arbolado Madrid"@es .

ex:dataset/pollution a rdf:Bag ;
    dcterms:title "Valores medios de contaminación NO₂ (Serie nacional)"@es ;
    dcterms:license <https://creativecommons.org/licenses/by/4.0/> ;
    rdfs:label "Dataset: Contaminación NO₂"@es .

ex:dataset/expenditure a rdf:Bag ;
    dcterms:title "Gasto de las empresas en protección ambiental — Industria total"@es ;
    dcterms:license <https://creativecommons.org/licenses/by/4.0/> ;
    rdfs:label "Dataset: Gasto ambiental industrial"@es .
