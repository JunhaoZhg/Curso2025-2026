# coding: UTF-8
@prefix :       <http://group24.linkeddata.es/ontology/urban-env#> .
@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms:<http://purl.org/dc/terms/> .
@prefix skos:   <http://www.w3.org/2004/02/skos/core#> .

#################################################################
# Ontology Metadata
#################################################################

<http://group24.linkeddata.es/ontology/urban-env>
    a owl:Ontology ;
    dcterms:title "Urban Environmental Ontology (Group 24)"@en ;
    dcterms:title "Ontología del Entorno Urbano (Grupo 24)"@es ;
    dcterms:creator "Group 24" ;
    dcterms:license <https://creativecommons.org/licenses/by/4.0/> ;
    dcterms:modified "2025-11-12"^^xsd:date ;
    owl:versionIRI <http://group24.linkeddata.es/ontology/urban-env/1.0> .

#################################################################
# Classes
#################################################################

:District a owl:Class ;
    rdfs:label "Distrito"@es ;
    rdfs:label "District"@en .

:TreeSpecies a owl:Class ;
    rdfs:label "Especie arbórea"@es ;
    rdfs:label "Tree species"@en .

:TreeStockObservation a owl:Class ;
    rdfs:label "Observación de arbolado"@es ;
    rdfs:label "Tree stock observation"@en .

:PollutionObservation a owl:Class ;
    rdfs:label "Observación de contaminación"@es ;
    rdfs:label "Pollution observation"@en .

:ExpenditureObservation a owl:Class ;
    rdfs:label "Observación de gasto ambiental"@es ;
    rdfs:label "Environmental expenditure observation"@en .

#################################################################
# Object Properties
#################################################################

:inDistrict a owl:ObjectProperty ;
    rdfs:label "en distrito"@es ;
    rdfs:label "in district"@en ;
    rdfs:domain :TreeStockObservation ;
    rdfs:range  :District .

:aboutSpecies a owl:ObjectProperty ;
    rdfs:label "sobre especie"@es ;
    rdfs:label "about species"@en ;
    rdfs:domain :TreeStockObservation ;
    rdfs:range  :TreeSpecies .

#################################################################
# Data Properties
#################################################################

:districtCode a owl:DatatypeProperty ;
    rdfs:label "código de distrito"@es ;
    rdfs:label "district code"@en ;
    rdfs:domain :District ;
    rdfs:range xsd:integer .

:districtName a owl:DatatypeProperty ;
    rdfs:label "nombre de distrito"@es ;
    rdfs:label "district name"@en ;
    rdfs:domain :District ;
    rdfs:range xsd:string .

:speciesName a owl:DatatypeProperty ;
    rdfs:label "nombre de especie"@es ;
    rdfs:label "species name"@en ;
    rdfs:domain :TreeSpecies ;
    rdfs:range xsd:string .

:treeCount a owl:DatatypeProperty ;
    rdfs:label "número de árboles"@es ;
    rdfs:label "tree count"@en ;
    rdfs:domain :TreeStockObservation ;
    rdfs:range xsd:integer .

:no2Value a owl:DatatypeProperty ;
    rdfs:label "valor medio de NO₂ (µg/m³)"@es ;
    rdfs:label "NO₂ average (µg/m³)"@en ;
    rdfs:domain :PollutionObservation ;
    rdfs:range xsd:float .

:expenditureAmount a owl:DatatypeProperty ;
    rdfs:label "gasto en protección ambiental (EUR)"@es ;
    rdfs:label "environmental protection expenditure (EUR)"@en ;
    rdfs:domain :ExpenditureObservation ;
    rdfs:range xsd:decimal .

:year a owl:DatatypeProperty ;
    rdfs:label "año"@es ;
    rdfs:label "year"@en ;
    rdfs:domain [
        a owl:Class ;
        owl:unionOf ( :TreeStockObservation :PollutionObservation :ExpenditureObservation )
    ] ;
    rdfs:range xsd:gYear .

#################################################################
# Annotation Properties
#################################################################

rdfs:label a owl:AnnotationProperty .
dcterms:title a owl:AnnotationProperty .
dcterms:creator a owl:AnnotationProperty .
dcterms:license a owl:AnnotationProperty .
dcterms:modified a owl:AnnotationProperty .
skos:altLabel a owl:AnnotationProperty .
